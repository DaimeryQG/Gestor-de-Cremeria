package com.back.back.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.crypto.password.PasswordEncoder;
import org.springframework.stereotype.Service;

import com.back.back.model.Registro;
import com.back.back.repository.RegistroRepository;

@Service
public class RegistroService {

    @Autowired
    private RegistroRepository registroRepository;
    
    @Autowired
    private PasswordEncoder passwordEncoder;

    public List<Registro> obtenerTodos() {
        return registroRepository.findAll();
    }

    public Optional<Registro> obtenerPorId(Long id) {
        return registroRepository.findById(id);
    }

    public Registro guardar(Registro registro) {
        return registroRepository.save(registro);
    }

    public Registro actualizar(Long id, Registro registroActualizado) {
        return registroRepository.findById(id)
            .map(registro -> {
                registro.setNombre(registroActualizado.getNombre());
                registro.setCorreo(registroActualizado.getCorreo());
                registro.setTelefono(registroActualizado.getTelefono());
                registro.setDireccion(registroActualizado.getDireccion());
                registro.setRfc(registroActualizado.getRfc());
                registro.setCurp(registroActualizado.getCurp());
                registro.setPais(registroActualizado.getPais());
                registro.setEstado(registroActualizado.getEstado());
                return registroRepository.save(registro);
            })
            .orElseThrow(() -> new RuntimeException("Registro no encontrado"));
    }

    public void eliminar(Long id) {
        registroRepository.deleteById(id);
    }
    
    public Registro registrar(Registro registro) {
        registro.setPassword(passwordEncoder.encode(registro.getPassword())); // Codifica la contraseña
        return registroRepository.save(registro);
    }
    
 // Método para verificar si el usuario autenticado es el propietario del registro
    public boolean esPropietario(Object principal, Long registroId) {
        // Aquí se obtiene el usuario autenticado
        String username = ((org.springframework.security.core.userdetails.User) principal).getUsername();
        
        // Se busca el registro por su ID y se compara el username
        Registro registro = registroRepository.findById(registroId).orElse(null);
        
        if (registro != null) {
            return registro.getUsername().equals(username);  // Verifica si el usuario es el propietario
        }
        return false;
    }
}
